{
    "name": "runroom/archetype-drupal",
    "type": "project",
    "description": "This is our Drupal project template",
    "homepage": "https://github.com/Runroom/archetype-drupal",
    "license": "MIT",
    "authors": [
        {
            "name": "Runroom",
            "email": "runroom@runroom.com",
            "homepage": "https://www.runroom.com"
        }
    ],
    "require": {
        "php": ">= 7.3",
        "composer/installers": "1.9.0",
        "cweagans/composer-patches": "1.7.0",
        "drupal/allowed_formats": "1.3.0",
        "drupal/clientside_validation": "3.0.0-rc4",
        "drupal/config_filter": "2.2.0",
        "drupal/config_split": "1.5.0",
        "drupal/console": "1.9.5",
        "drupal/core": "9.0.7",
        "drupal/date_popup": "1.1.0",
        "drupal/drush_language": "1.0.0-rc3",
        "drupal/editor_advanced_link": "1.8.0",
        "drupal/entity_reference_revisions": "1.8.0",
        "drupal/field_group": "3.1.0",
        "drupal/gin": "3.0.0-alpha26",
        "drupal/gin_toolbar": "1.0.0-beta12",
        "drupal/hreflang": "1.3.0",
        "drupal/imageapi_optimize": "4.0.0-beta1",
        "drupal/menu_breadcrumb": "1.14.0",
        "drupal/menu_link_attributes": "1.1.0",
        "drupal/metatag": "1.14.0",
        "drupal/paragraphs": "1.12.0",
        "drupal/pathauto": "1.8.0",
        "drupal/redirect": "1.6.0",
        "drupal/twig_field_value": "2.0.0",
        "drupal/twig_tweak": "2.7.0",
        "drupal/vbo_export": "3.2.0",
        "drupal/views_bulk_operations": "3.9.0",
        "drupal/xmlsitemap": "1.0.0",
        "drush/drush": "10.3.5",
        "twig/twig": "2.13.1"
    },
    "replace": {
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "require-dev": {
        "deployer/dist": "6.8.0",
        "drupal/devel": "4.0.1",
        "drupal/devel_entity_updates": "3.0.0",
        "drupal/features": "3.11.0",
        "ergebnis/composer-normalize": "2.8.2",
        "friendsofphp/php-cs-fixer": "2.16.4",
        "kint-php/kint": "3.3.0",
        "kint-php/kint-twig": "3.0.0",
        "mglaman/phpstan-drupal": "0.12.5",
        "phpstan/phpstan": "0.12.48",
        "phpunit/phpunit": "9.4.0"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        },
        "patches": {
            "drupal/core": {
                "FAPI #radios form elements do not have an accessible required attribute - 2951317": "https://www.drupal.org/files/issues/2019-04-19/2951317_29.patch"
            },
            "drupal/twig_tweak": {
                "Make image_style more powerful": "patches/image_style.patch"
            }
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "php-cs-fixer": "php-cs-fixer fix --ansi --verbose",
        "phpstan": "phpstan analyse --no-progress"
    }
}
