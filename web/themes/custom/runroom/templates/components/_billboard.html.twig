{% set title = title|default('') %}
{% set description = description|default(false) %}
{% set class = class|default('') %}
{% set image = image|default(false) %}

<section class="flex items-center justify-center h-screen bg-cover bg-no-repeat bg-center text-white text-center {{ class }}" style="{% if image %}background-image: url({{ image }});{% endif %}">
    <div class="wrapper">
        <h1 class="mb-4">{{ title }}</h1>
        {% if description %}
            <p class="max-w-prose">{{ description }}</p>
        {% endif %}
    </div>
</section>
