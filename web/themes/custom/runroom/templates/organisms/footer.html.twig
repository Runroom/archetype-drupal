{% import 'helpers/macros.html.twig' as macros %}

<footer id="footer" class="footer">
    <div class="u-wrapper u-flex u-flex--align-start u-flex--justify-between">
        &copy; Runroom {{ 'now'|date('Y') }}
        {{ macros.icon('r-runroom') }}
        <ul class="footer__pages">
            {% for staticPage in page.staticPages('footer') %}
            <li><a href="{{ path('runroom.static_page.route.static.' ~ locale, {'slug': staticPage.slug}) }}">{{ staticPage.title }}</a></li>
            {% endfor %}
            <li><a href="{{ path('runroom.cookies.route.cookies.' ~ locale) }}">{{ 'cookies.policy'|trans }}</a></li>
        </ul>
    </div>
</footer>
