{% extends 'layouts/base.html.twig' %}

{% block main %}
    {% include 'components/skip-link.html.twig' with {
        target: '#main',
        title: 'a11y.skip_to.main'|trans
    } %}
    {% include 'components/billboard.html.twig' with {
        title: block('billboardTitle') is defined ? block('billboardTitle') : '',
        description: block('billboardDescription') is defined ? block('billboardDescription') : '',
        class: block('billboardClass') is defined ? block('billboardClass') : '',
        image: block('billboardImage') is defined ? block('billboardImage') : ''
    } %}
    {% block('content') %}
{% endblock %}
